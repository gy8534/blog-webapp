<%- include('../partials/navbar') %>
<div class="container">
  <h1>My blogs</h1>
  <% if (blogs.length > 0) {%>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Date</th>
      </tr>
    </thead>
    <tbody>
      <% blogs.forEach((blog) => { %>
      <tr>
        <td><a href="/blogs/<%= blog._id%>"><%= blog.title %></a></td>
        <td><%= blog.createdAt %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } else {%>
  <p>you have not created any blogs</p>
  <% } %>
</div>
